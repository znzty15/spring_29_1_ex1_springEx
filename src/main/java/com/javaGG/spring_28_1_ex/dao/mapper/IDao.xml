<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">    
<mapper namespace="com.javaGG.spring_28_1_ex.dao.IDao">
   <select id="listDao" resultType="com.javaGG.spring_28_1_ex.dto.ContentDto">
      SELECT * FROM BOARD ORDER BY MID DESC
   </select>
   
   <select id="writeDao">
      INSERT INTO BOARD (MID, MWRITER, MCONTENT) VALUES (BOARD_SEQ.NEXTVAL, #{param1}, #{param2})
   </select>
   
   <select id="deleteDao">
      DELETE FROM BOARD WHERE MID = #{param1}
   </select>
</mapper>